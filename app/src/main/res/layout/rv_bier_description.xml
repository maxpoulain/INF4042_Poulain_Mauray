<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="#ea0c0c"> <!-- android:clickable="true"
    android:onClick="actionbouton">-->


    <ImageView android:text="bier" android:layout_width="match_parent"
        android:layout_height="305dp"
        android:id="@+id/rv_bier_description_thumb"
        android:textStyle="italic"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView android:text="bier" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_bier_description_name"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_column="0"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <TextView android:text="bier" android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/rv_bier_description_category"
        android:textStyle="italic"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_weight="1" />

    <TextView android:text="bier" android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:id="@+id/rv_bier_description_pays"
    android:textStyle="italic"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_weight="1" />

    <TextView android:text="bier" android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/rv_bier_description_description"
        android:textStyle="italic"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_weight="1" />
    <TextView android:text="bier" android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/rv_bier_description_note"
        android:textStyle="italic"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_weight="1" />
    <TextView android:text="bier" android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/rv_bier_description_buveur"
        android:textStyle="italic"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_weight="1" />

</LinearLayout>